<?xml version="1.0"?>

<portlet-app version="2.0"
             xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
    <portlet>
        <portlet-name>basic</portlet-name>
        <display-name>Flow Basic Portlet with Button</display-name>
        <portlet-class>com.vaadin.flow.portal.basic.BasicPortlet</portlet-class>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
    </portlet>

    <portlet>
        <portlet-name>upload</portlet-name>
        <display-name>Flow Portlet with Upload</display-name>
        <portlet-class>com.vaadin.flow.portal.upload.UploadPortlet</portlet-class>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
    </portlet>

    <portlet>
        <portlet-name>eventhandler</portlet-name>
        <display-name>Flow Portlet with Mode and Window State Change Handler</display-name>
        <portlet-class>com.vaadin.flow.portal.lifecycle.EventHandlerPortlet</portlet-class>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>EDIT</portlet-mode>
            <portlet-mode>HELP</portlet-mode>
        </supports>
    </portlet>

    <portlet>
        <portlet-name>render</portlet-name>
        <display-name>Flow Portlet with RenderStateChange</display-name>
        <portlet-class>com.vaadin.flow.portal.rendermodes.RenderPortlet</portlet-class>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>EDIT</portlet-mode>
        </supports>
    </portlet>

    <portlet>
        <portlet-name>minimized-state-render</portlet-name>
        <display-name>Flow Portlet with Minimizeed state rendering</display-name>
        <portlet-class>com.vaadin.flow.portal.rendermodes.MinimizedStateRenderPortlet</portlet-class>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>EDIT</portlet-mode>
        </supports>
    </portlet>

    <portlet>
        <portlet-name>errorhandling</portlet-name>
        <display-name>Flow Portlet that throws and exception</display-name>
        <portlet-class>com.vaadin.flow.portal.errorhandling.ErrorPortlet</portlet-class>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
    </portlet>

</portlet-app>
